#include <iostream>
#include <windows.h>
#include <cstdlib>
#include <conio.h>
using namespace std;

//funkcja rysująca planszę 
void plansza(char t[])
{
  for(int i = 1; i <= 9; i++)
  {
    cout << " " << t[i] << " ";
    if(i % 3)
      cout << "|";
    else if(i != 9)
      cout << "\n---+---+---\n";
    else cout << endl;        
  }    
}

bool wygrana(char t[], char g)
{
  bool test;
  int i;
  
  test = false;
  for(i = 1; i <= 7; i += 3)
    test |= ((t[i] == g) && (t[i+1] == g) && (t[i+2] == g));
  for(i = 1; i <= 3; i++)
    test |= ((t[i] == g) && (t[i+3] == g) && (t[i+6] == g));
  test |= ((t[1] == g) && (t[5] == g) && (t[9] == g));
  test |= ((t[3] == g) && (t[5] == g) && (t[7] == g));
  if(test)
  {
    plansza(t);
    cout << "\nGRACZ " << g << " gygral gracz\n\n";
    return true;
  }
  return false;
}









return 0;
